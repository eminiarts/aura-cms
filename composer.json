{
    "name": "eminiarts/aura",
    "description": "Aura CMS for Laravel",
    "keywords": [
        "eminiarts",
        "laravel",
        "aura",
        "TALL",
        "TALL stack",
        "TailwindCSS",
        "AlpineJS",
        "Livewire"
    ],
    "homepage": "https://github.com/eminiarts/aura",
    "license": "MIT",
    "authors": [{
        "name": "Emini Arts",
        "email": "support@eminiarts.ch",
        "role": "Developer"
    }],
    "require": {
        "php": "^8.1",
        "illuminate/contracts": "^10.0|^9.0",
        "lab404/laravel-impersonate": "^1.7",
        "laravel/fortify": "^1.15",
        "laravel/sanctum": "^3.2",
        "livewire/livewire": "^2.10",
        "spatie/laravel-package-tools": "^1.14.1",
        "wire-elements/modal": "^1.0"
    },
    "require-dev": {
        "laravel/dusk": "^7.7",
        "laravel/framework": "^10.0|^9.0",
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^6.0",
        "nunomaduro/larastan": "^2.0",
        "orchestra/testbench": "^8.0",
        "pestphp/pest": "^1.21",
        "pestphp/pest-plugin-livewire": "^1.0",
        "pestphp/pest-plugin-parallel": "^1.2",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "spatie/laravel-ray": "^1.26",
        "spatie/pest-plugin-snapshots": "^1.1",
        "spatie/test-time": "^1.3"
    },
    "autoload": {
        "psr-4": {
            "Eminiarts\\Aura\\": "src",
            "Eminiarts\\Aura\\Database\\Factories\\": "database/factories"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Eminiarts\\Aura\\Tests\\": "tests"
        }
    },
    "scripts": {
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest --no-coverage --parallel",
        "test-coverage": "vendor/bin/pest --coverage --parallel --min=80",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Lab404\\Impersonate\\ImpersonateServiceProvider",
                "Eminiarts\\Aura\\Providers\\FortifyServiceProvider",
                "Eminiarts\\Aura\\AuraServiceProvider"
            ],
            "aliases": {
                "Aura": "Eminiarts\\Aura\\Facades\\Aura"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
